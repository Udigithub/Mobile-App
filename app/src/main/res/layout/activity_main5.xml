<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/background_gradient">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#1565C0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_gravity="start|center_vertical"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HopeLink 🌍🤝"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
    </FrameLayout>

    <!-- Profile Details Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title: Profile Details -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

        <!-- Full Name Label -->
        <TextView
            android:id="@+id/fullname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginTop="40dp"/>

        <!-- Full Name Value -->
        <TextView
            android:id="@+id/fullname_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>

        <!-- Email Label -->
        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginTop="40dp"/>

        <!-- Email Value -->
        <TextView
            android:id="@+id/email_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="johndoe@example.com"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/donation_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Details:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginTop="40dp"/>

        <!-- Email Value -->
        <TextView
            android:id="@+id/donation_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.1000/="
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- Footer -->
    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/foote"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_gradient"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/home"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/detail"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Search" />

            <ImageButton
                android:id="@+id/btn_donate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/donate"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Donations" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/profile"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Profile" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
